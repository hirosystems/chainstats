{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "noEmit": true,
    "baseUrl": "."
  },
  "baseUrl": "./src",
  "paths": {
    "@modules/*": ["./modules/*"]
  },
  "include": ["src/**/*", "jest.config.ts"],
  "exclude": ["lib", "node_modules"]
}
